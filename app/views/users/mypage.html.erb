<div class="contaienr">
    <div class="card">
        <div class="card-header is-flex is-justify-content-center">
            <div class="card-header-icon">
                <figure class="image is-128x128">
                    <% if current_user.icon.attached? %>
                        <%= image_tag current_user.icon, class: "is-rounded" %>
                    <% else %>
                        <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
                    <% end %>
                </figure>
            </div>
        </div>
        <div class="card-content">
            <div class="content">
                <div class="container">
                    <section class="section">
                        <p class="has-text-centered is-size-2"><%= current_user.name %></p>
                        <h2 class="subtitle has-text-centered">
                            <%= simple_format(h(current_user.description)) %>
                        </h2>
                    </section>

                    <div class="is-flex is-justify-content-flex-end">
                        <%= link_to "Edit", edit_user_registration_path, class: "button" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
