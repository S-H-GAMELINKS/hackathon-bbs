<!DOCTYPE html>
<html>
  <head>
    <title>HackathonBbs</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>

    <style>
      <% if user_signed_in? %>
        [data-visible-to-created-user]:not([data-visible-to-created-user="<%= current_user.id %>"]) {
          visibility: hidden;
        }
      <% else %>
        [data-visible-to-created-user] {
          visibility: hidden;
        }
      <% end %>
    </style>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
