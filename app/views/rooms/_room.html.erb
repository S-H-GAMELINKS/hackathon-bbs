<div class="column is-4" id="<%= dom_id room %>">
    <div class="card">
        <div class="card-content">
            <div class="media">
                <div class="media-left">
                    <figure class="image is-48x48">
                    <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                    </figure>
                </div>
                <div class="media-content">
                    <p class="title is-4"><%= room.name %></p>
                    <p class="subtitle is-5"><%= room.content %></p>
                </div>
            </div>

            <div class="content">
                <% if room.user.name.present? %>
                    <p>created by <%= room.user.name %></p>
                <% end %>
                <%= link_to 'Show', room, "data-turbo-frame": "_top"  %>
                <div data-visible-to-created-user="<%= room.user.id%>">
                    <%= link_to 'Edit', edit_room_path(room) %>
                    <%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %>
                </div>
                <time datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
            </div>
        </div>
    </div>
</div>