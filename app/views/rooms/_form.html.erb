<%= form_with(model: room, data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "input is-info" %>
  </div>

  <div class="select">
    <%= form.collection_select :category_id, @categories, :id, :name, {class: "select is-info"} %>
  </div>

  <div class="actions">
    <%= form.submit class: "button is-info" %>
  </div>
<% end %>
